
@if (TootTip)
{
    <MatTooltip Tooltip="@Description" Wrap="true">
        <MatChip Label="@Name" Style="@("background-color:"+Color)" @onclick="OnClick"></MatChip>
    </MatTooltip>
}
else
{
    <MatChip Label="@Name" Style="@("background-color:"+Color)" @onclick="OnClick" ></MatChip>
}

@code{

    [Parameter]
    public bool TootTip { get; set; } = true;

    [Parameter]
    public string Name { get; set; }

    [Parameter]
    public string Description { get; set; }

    [Parameter]
    public string Color { get; set; }

    [Parameter]
    public Tag Tag
    {
        set
        {
            Name = value.Name;
            Description = value.Description;
            Color = value.Color;
        }
    }


    [Parameter]
    public EventCallback<MouseEventArgs> OnClick { get; set; }

}